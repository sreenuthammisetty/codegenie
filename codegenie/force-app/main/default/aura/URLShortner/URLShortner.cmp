<aura:component controller="URLShortnerController">
    <aura:attribute name="url" type="string" />    
    
    <div class="slds-grid slds-gutters slds-m-top_xx-large">
        <div class="slds-col slds-size_12-of-12 slds-align_absolute-center slds-text-heading_large">
			Lightning URL Shortner
        </div>
    </div>
    
    <div class="slds-grid slds-gutters slds-m-top_xx-large">
        <div class="slds-col slds-size_3-of-12">
            
        </div>
        <div class="slds-col slds-size_6-of-12">
            <span>
                <lightning:input value="{!v.url}" label="Long URL"/>	
	            <lightning:button label="Shorten Me" onclick="{!c.shortenMe}"/>
            </span>	        
        </div>
        <div class="slds-col slds-size_3-of-12">
            
        </div>
    </div>
    
    
    
</aura:component>